<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane
        fx:controller="org.example.holamundo.MainController"
        maxHeight="600.0" maxWidth="800.0" minHeight="100.0" minWidth="100.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <top>
      <Label text="Primera app JavaFX" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Hebrew Bold" size="25.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnSaludar" mnemonicParsing="false" text="Saludar" />
            <Button fx:id="btnCerrar" mnemonicParsing="false" text="Salir" />
         </children>
      </FlowPane>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelSaludo" text="Saludo" />
            <TextField fx:id="textoNombre" promptText="introduce tu nombre" />
         </children>
      </VBox>
   </center>
</BorderPane>
